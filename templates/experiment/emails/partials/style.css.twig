table {
    border-collapse: collapse;
    width: 100%;
}
thead {
    background: #ddd;
}
td, th {
    padding: 5px;
}
th {
    text-align: left;
}
span.small {
    color: #999;
    font-size: 0.8em;
    font-style: italic;
}
a.btn {
    background: #83cefa;
    color: #fff;
    padding: 10px;
    text-decoration: none;
}
